<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WorkTracker.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WorkTracker"
    Shell.FlyoutBehavior="Disabled"
    Title="WorkTracker">

    <TabBar>
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent
        Title="TestFlex"
        ContentTemplate="{DataTemplate local:TestFlex}"
        Route="TestFlex"/>
    </TabBar>
    
    <ShellContent
      Title="EditPage"
      ContentTemplate="{DataTemplate local:EditPage}"
      Route="EditPage"/>
</Shell>
